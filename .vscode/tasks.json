{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "CMAKE Mac",
            "command": "cmake",
            "args": [
                "-S",
                ".",
                "-B",
                "${userHome}/Programme/backup_${input:buildType}",
                "-DCMAKE_PREFIX_PATH:PATH=${userHome}/Qt/6.9.3/llvm-mingw_64",
                "-DCMAKE_BUILD_TYPE=${input:buildType}",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=1"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "none",
                "isDefault": true
            }
        },
        {
            "type": "cppbuild",
            "label": "Build",
            "command": "cmake",
            "args": [
                "--build",
                "${userHome}/Programme/backup_${input:buildType}",
                "--target",
                "all"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "cppbuild",
            "label": "__CMAKE Win old",
            "command": "C:/Program Files/CMake/bin/cmake.exe",
            "args": [
                "-S",
                ".",
                "-B",
                "%USERPROFILE%/Programme/backup_debug",
                "-G",
                "Ninja",
                "-DCMAKE_PREFIX_PATH:PATH=C:/Qt/6.5.3/mingw_64",
                "-DQt6_DIR:PATH=C:/Qt/6.5.3/mingw_64/lib/cmake/Qt6",
                "-DCMAKE_C_COMPILER:FILEPATH=C:/Qt/Tools/mingw1310_64/bin/gcc.exe",
                "-DCMAKE_CXX_COMPILER:FILEPATH=C:/Qt/Tools/mingw1310_64/bin/g++.exe",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=1"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "none",
                "isDefault": true
            }
        },
        {
            "type": "cppbuild",
            "label": "CMAKE Win",
            "command": "C:/Program Files/CMake/bin/cmake.exe",
            "args": [
                "-S",
                ".",
                "-B",
                "${userHome}/Programme/backup_${input:buildType}",
                "-G",
                "Ninja",
                "-DCMAKE_PREFIX_PATH:PATH=C:/Qt/6.9.3/llvm-mingw_64",
                "-DQt6_DIR:PATH=C:/Qt/6.9.3/llvm-mingw_64/lib/cmake/Qt6",
                "-DCMAKE_C_COMPILER:FILEPATH=C:/Qt/Tools/llvm-mingw1706_64/bin/gcc.exe",
                "-DCMAKE_CXX_COMPILER:FILEPATH=C:/Qt/Tools/llvm-mingw1706_64/bin/g++.exe",
                "-DCMAKE_BUILD_TYPE=${input:buildType}",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=1"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "none",
                "isDefault": true
            }
        },
        {
            "type": "process",
            "label": "Windows Edit UI",
            "command": "C:/Qt/6.9.3/mingw_64/bin/designer.exe",
            "args": [
                "${file}"
            ],
            "detail": "Open currently opened ui file in Designer.",
            "problemMatcher": []
        },
    ],
    "inputs": [
        {
        "type": "pickString",
        "id": "buildType",
        "description": "What type of build?",
        "options": [
            "debug",
            "release"
        ],
        "default": "debug"
        }
    ],
    "version": "2.0.0"
}